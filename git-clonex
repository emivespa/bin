#!/bin/sh -e
#
# - organize your git clones
#
# git clonex https://git.host/user/project
# ==
# git clone https://git.host/user/project ~/src/git.host/user/project

url="$1"
shift

case "$url" in
	# (*'%'*)    exit 1             ;; # Err if URL contains any %s.
	(*'://'*)  dir="${url#*://}"  ;; # Strip protocol if there is one.
	(*)        dir="$url"         ;; # Case for user@host type URLs.
esac

dir="${HOME:-'~'}/src/${dir}"
git clone "$url" "$dir" "$@" # Slashes: ~/src/git.host/user/project
